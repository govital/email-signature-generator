    "nunjucks": "^3.2.4",
    "pg": "^8.14.1",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.15",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.11.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.0",
    "ts-node-dev": "^2.0.0",
